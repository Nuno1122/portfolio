<div class="listings">
  <div class="listings_channels" style="margin-top: 70px;">
    <h2 class="listings_header"></h2>
    <ul class="channel_list">
      <!-- nav - start -->

      <div class="flex items-center" style="margin-top: 10px; margin-left: 15px;">
        <% if current_user && current_user.image_url.present? %>
          <%= image_tag current_user.image_url, size: 'xl', class: 'rounded-full' %>
        <% else %>
          <%= icon("solid", "user-circle", size: 'xl') %>
        <% end %>
      </div>

      <% if current_user %> <!-- 確認を追加 -->
        <p style="margin-top: 10px; margin-bottom: 15px;margin-left: 15px;"><%= current_user.name %>さん</p>
      <% end %> <!-- 確認を追加 -->

      <div style="border: 0.5px solid black; width: 90%; margin-left: 5%; margin-right: 5%;"></div>
      <!-- nav - end -->

      <% if current_user %> <!-- 確認を追加 -->
        <div style="margin-top: 15px;">
          <%= link_to "朝活メッセージ", new_post_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= link_to "朝活メッセージ一覧", posts_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= link_to "ランキング",  rankings_path, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= button_to(t('defaults.logout'), logout_path, method: :delete, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100") %>
        </div>
      <% end %> <!-- 確認を追加 -->
    </ul>
  </div>
</div>

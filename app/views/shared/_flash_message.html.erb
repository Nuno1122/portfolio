<% flash.each do |message_type, message| %>
    <div class="
        p-4 my-4
        <%= message_type == 'success' ? 'bg-green-200 text-green-800' : '' %>
        <%= message_type == 'warning' ? 'bg-yellow-200 text-yellow-800' : '' %>
        <%= message_type == 'error' ? 'bg-red-200 text-red-800' : '' %>
        <%= message_type == 'notice' ? 'bg-blue-200 text-blue-800' : '' %>
        border-l-4 <%= message_type == 'success' ? 'border-green-800' : '' %>
        <%= message_type == 'warning' ? 'border-yellow-800' : '' %>
        <%= message_type == 'error' ? 'border-red-800' : '' %>
        <%= message_type == 'notice' ? 'border-blue-800' : '' %>
        ">
      <div>
        <%= message %>
      </div>
    </div>
  <% end %>
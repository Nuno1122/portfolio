<!-- hero - start -->

     
<header class="mb-4 flex items-center justify-between py-4 md:py-8">
  <!-- logo - start -->
  <%= link_to(morning_activity_logs_path, class: "text-black-800 inline-flex items-center gap-2.5 text-l font-bold md:text-3xl px-4", "aria-label": "logo") do %>  
    おはログ!!🌞
  <% end %>
  
  
<!-- logo - end -->

<!-- nav - start -->
<p class= "hidden sm:block"><%= current_user.name %>さん</p>
<div class="flex items-center hidden sm:block">
<% if current_user && current_user.image_url.present? %>
<%= image_tag current_user.image_url, size: '4xl', class: 'rounded-full' %>
<% else %>
<%= icon("solid", "user-circle", size: '3xl', additional_classes: 'mr-2') %> 
<% end %>
</div>



<!-- nav - end -->

<!-- buttons - start -->
            
<%= link_to t('posts.index.title'), posts_path, class: "inline-block rounded-lg bg-indigo-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base hidden sm:block" %>
          
<%= link_to t('rankings.title'), rankings_path, class: "inline-block rounded-lg bg-indigo-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-indigo-600 focus-visible:ring active:bg-indigo-700 md:text-base hidden sm:block" %>

<%= button_to((t 'defaults.logout'), logout_path, method: :delete, class: "rounded-lg bg-gray-200 px-4 py-2 text-center text-xs font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-300 focus-visible:ring active:text-gray-700 md:text-sm md:px-6 lg:inline-block hidden sm:block") %>

<svg width="95" height="94" viewBox="0 0 95 94" class="h-auto w-2 md:w-6 text-indigo-500" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
</svg>
<!-- buttons - end -->


</header>


<!-- hero - end -->